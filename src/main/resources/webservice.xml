<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
       http://cxf.apache.org/jaxws
       http://cxf.apache.org/schemas/jaxws.xsd
       http://cxf.apache.org/jaxrs
       http://cxf.apache.org/schemas/jaxrs.xsd">


	<!-- 发布WebService服务 -->

	<jaxws:endpoint 
	    id="socketImpl" 
	    implementor="com.vitea.endpoint.GetChargeListImpl" 
	    address="/getChargeInfo" />
	<jaxws:endpoint 
	    id="sendMsg" 
	    implementor="com.vitea.endpoint.SendMessageImpl" 
	    address="/sendMsgtoUser" />
	<jaxws:endpoint 
	    id="queryVolte" 
	    implementor="com.vitea.endpoint.QueryVolteInfoImpl" 
	    address="/queryVolteInfo" />
	  
<!-- 发布restful webservice -->
  <bean id="serviceKnowledge" class="com.vitea.endpoint.GetKnowledgeImpl"/>
  <jaxrs:server id="knowledgeService"  address="/rest">
    <jaxrs:serviceBeans>
      <ref bean="serviceKnowledge"/>
    </jaxrs:serviceBeans>
  </jaxrs:server>         
</beans>
